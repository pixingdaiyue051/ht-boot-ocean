<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tequeno.bootssm.mapper.sys.RoleInfoMapper" >
  <resultMap id="BaseResultMap" type="com.tequeno.bootssm.pojo.sys.role.RoleInfo" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="role_name" property="roleName" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, role_name, create_time, modify_time
  </sql>
  <sql id="where_conditions">
    1 = 1
    <if test="roleName != null and roleName != ''">
      and role_name = #{roleName}
    </if>
    <if test="roleNameLike != null and roleNameLike != ''">
      and role_name like CONCAT('%', #{roleNameLike},'%')
    </if>
  </sql>
  <sql id="order_conditions">
    <if test="orderBy != null and orderBy != ''">
      order by ${orderBy}
    </if>
  </sql>
  <select id="selectAllByCondition" resultMap="BaseResultMap">
    select * from um_role_info
    <where>
      <include refid="where_conditions"/>
    </where>
    <include refid="order_conditions"/>
  </select>
</mapper>